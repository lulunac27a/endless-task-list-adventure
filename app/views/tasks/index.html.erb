<h1>Task List</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Due Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.due_date.strftime("%A, %B %d, %Y") %>
          <td>
            <%= button_to "Show", task_path(task), method: :get %>
            <%= button_to "Edit", edit_task_path(task), method: :get %>
            <%= button_to "Complete", complete_task_path(task), method: :patch %>
            <%= button_to "Delete",
            task_path(task),
            method: :delete,
            data: {
              method: :delete,
              confirm: "Are you sure you want to delete this task?",
            } %>
          </td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

