Level: <%= @user.level %>
<%= @user.xp.round %> / <%= @user.xp_required.round %> XP

<h1>Task List</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Due Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <td><%= task.name %></td>
                <td><%= task.due_date.strftime("%A, %B %d, %Y") %>
                <td>
                    <%= link_to 'Show', task_path(task) %>
                    <%= link_to 'Edit', edit_task_path(task) %>
                    <%= link_to 'Complete', complete_task_path(task), method: :patch %>
                    <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %>
                    </td>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'New Task', new_task_path %>